{
  "name": "clubhouse-lib",
  "version": "0.8.0",
  "description": "A Promise based library to the Clubhouse REST API",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:typescript",
    "build:typescript": "tsc",
    "lint": "eslint src",
    "test": "jest",
    "test:format": "prettier --list-different --write src/**/*.js src/**/*.ts",
    "format": "prettier --write src/**/*.js src/**/*.ts",
    "ci": "yarn lint && && yarn test && yarn test:format && yarn build"
  },
  "dependencies": {
    "fetch-everywhere": "^1.0.5",
    "query-string": "^6.2.0",
    "universal-url": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/node": "^10.11.3",
    "benchmark": "^2.1.4",
    "bluebird": "^3.5.0",
    "eslint": "^4.7.2",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-flowtype": "^2.36.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "save": "^2.3.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/",
      "(<rootDir>/__tests__/.*|(\\.|/)utils)\\.tsx?$"
    ]
  }
}
